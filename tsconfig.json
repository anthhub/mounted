{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": false,
    "target": "es2017",
    "module": "commonjs",
    "removeComments": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "jsx": "preserve",
    "jsxFactory": "Taro.createElement",
    "typeRoots": [
      "node_modules/@types",
      "node_modules/miniprogram-api-typings",
      "global.d.ts",
    ],
  },
  "exclude": ["dist"]
}
